<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:text="Скорость"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="0" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_margin="2dp" />
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="1" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_margin="2dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="0"
            android:id="@+id/speed1"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:background="@color/accent_material_light"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speed2"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speed3"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speed4"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speed5"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
    </LinearLayout>


    <TextView
        android:text="Быстрее / медленнее"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="2" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_margin="2dp" />
    <LinearLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_row="3" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_margin="2dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:text="0"
            android:id="@+id/speedDiff1"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:background="@color/accent_material_light"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speedDiff2"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speedDiff3"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speedDiff4"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
        <TextView
            android:text="0"
            android:id="@+id/speedDiff5"
            android:layout_width="76dp" android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="2dp" />
    </LinearLayout>


    <TextView
        android:text="Частота замеров"
        android:id="@+id/tvStep"
        android:layout_width="188dp" android:layout_height="wrap_content"
        android:layout_row="4" android:layout_column="0"
        android:layout_margin="2dp" />
    <EditText
        android:layout_width="188dp" android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etStep"
        android:layout_row="4" android:layout_column="1"
        android:layout_margin="2dp" />

    <TextView
        android:text="Нужная скорость"
        android:id="@+id/tvTargetSpeed"
        android:layout_width="188dp" android:layout_height="wrap_content"
        android:layout_row="5" android:layout_column="0"
        android:layout_margin="2dp" />
    <EditText
        android:layout_width="188dp" android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etTargetSpeed"
        android:layout_row="5" android:layout_column="1"
        android:layout_margin="2dp" />


    <Button
        android:text="Старт"
        android:id="@+id/startTracking"
        style="@style/ButtonBordered"
        android:layout_width="188dp" android:layout_height="60dp"
        android:layout_row="6" android:layout_column="0"
        android:onClick="onStartBTNClick" />
    <Button
        android:text="Стоп"
        android:id="@+id/stopTracking"
        style="@style/ButtonBordered"
        android:layout_width="188dp" android:layout_height="60dp"
        android:layout_row="6" android:layout_column="1"
        android:onClick="onStopBTNClick" />
    <Button
        style="@style/ButtonBordered"
        android:text="Плеер"
        android:id="@+id/button"
        android:layout_width="188dp" android:layout_height="60dp"
        android:layout_row="7" android:layout_column="0"
        android:onClick="onPlayerBTNClick" />
</GridLayout>
